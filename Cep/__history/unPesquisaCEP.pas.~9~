unit unPesquisaCEP;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Data.DB, Vcl.StdCtrls, Vcl.Grids,unClasseCep,
  Vcl.DBGrids;

type
  TForm1 = class(TForm)
    Label1: TLabel;
    Button1: TButton;
    Button2: TButton;
    DBGrid1: TDBGrid;
    edtCEP: TEdit;
    dsCEP: TDataSource;
  private
    { Private declarations }
    oCEP: Tcep;
  public
    { Public declarations }
    procedure GetCEP(CEP: string);
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

{ TForm1 }

procedure TForm1.GetCEP(CEP: string);
begin
  oCEP.GetCEP(edtCEP.Text);
end;

end.
