unit unClasseCep;

interface

uses
System.SysUtils, System.Classes, Vcl.Dialogs, Datasnap.DBClient, Data.DB;

type Tcep = class
  private

  cCodigo: integer;
  cCidade: string;
  cEstado: string;
  cLogradouro: string;
  cNumero: integer;

public
  constructor Create;
  destructor Destroy;

  procedure Incluir;
  procedure Alterar;
  procedure Excluir;
  procedure Cancelar;
  procedure Salvar;
  procedure GetDados;

  function GetCds: TClientDataSet;

  property codigo: integer read cCodigo write cCodigo;
  property cidade: string read cCidade write cCidade;
  property estado: string read cEstado write cEstado;
  property logradouro: string read cLogradouro write cLogradouro;
  property numero: integer read cNumero write cNumero;

end;

implementation

end.
